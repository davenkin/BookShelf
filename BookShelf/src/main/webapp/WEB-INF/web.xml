<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>BookShelf</display-name>

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>bookshelf.servlet.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/helloworld</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloWorldJsp</servlet-name>
        <servlet-class>bookshelf.servlet.HelloWorldJspServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorldJsp</servlet-name>
        <url-pattern>/helloworldjsp</url-pattern>
    </servlet-mapping>

</web-app>
